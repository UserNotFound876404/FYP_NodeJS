<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Search</title>
  <style>
    /* Reset & base */
    *, *::before, *::after { box-sizing: border-box; }
    html, body { height: 100%; margin: 0; font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; background: linear-gradient(180deg,#f6f8fb 0%,#eef5ff 100%); color: #0b1220; }
    a { color: #2b6ef6; text-decoration: none; }
    a:hover { text-decoration: underline; }

    /* Layout */
    .wrap {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 28px;
    }

    .card {
      width: 100%;
      max-width: 720px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(12,18,30,0.08);
      padding: 28px;
      transition: transform .16s ease, box-shadow .16s ease;
    }
    .card:focus-within,
    .card:hover { transform: translateY(-4px); box-shadow: 0 18px 46px rgba(12,18,30,0.10); }

    header {
      margin-bottom: 18px;
    }
    h1 {
      margin: 0 0 6px 0;
      font-size: 1.5rem;
      color: #071126;
    }
    p.lead {
      margin: 0;
      color: #475569;
      font-size: 0.95rem;
    }

    /* Form */
    form {
      margin-top: 18px;
      display: grid;
      gap: 12px;
      grid-template-columns: 1fr 1fr; /* two-column layout on wide screens */
    }

    /* Make labels and inputs align nicely */
    .field {
      display: flex;
      flex-direction: column;
    }
    label {
      font-size: 0.9rem;
      color: #334155;
      margin-bottom: 6px;
      font-weight: 600;
    }

    input[type="text"],
    input[type="number"],
    input[type="search"],
    select {
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #e6eef9;
      background: linear-gradient(180deg,#ffffff 0%, #fbfdff 100%);
      font-size: 0.95rem;
      color: #0b1220;
      outline: none;
      transition: box-shadow .14s ease, border-color .14s ease, transform .12s ease;
    }
    input::placeholder { color: #94a3b8; }

    input:focus, select:focus {
      border-color: #7aa2ff;
      box-shadow: 0 8px 20px rgba(122,162,255,0.12);
      transform: translateY(-1px);
    }

    /* Make the last row span full width (buttons / link) */
    .full {
      grid-column: 1 / -1;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      margin-top: 6px;
    }

    button[type="submit"] {
      appearance: none;
      -webkit-appearance: none;
      border: none;
      cursor: pointer;
      background: linear-gradient(90deg,#3b82f6 0%, #2563eb 100%);
      color: #ffffff;
      padding: 10px 16px;
      border-radius: 10px;
      font-size: 0.98rem;
      font-weight: 600;
      box-shadow: 0 8px 20px rgba(37,99,235,0.15);
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }
    button[type="submit"]:hover { transform: translateY(-2px); filter: brightness(1.03); }
    button[type="submit"]:active { transform: translateY(0); box-shadow: 0 6px 14px rgba(37,99,235,0.12); }

    .help-link {
      color: #64748b;
      font-size: 0.95rem;
    }

    /* Responsive: single column on narrow screens */
    @media (max-width: 720px) {
      .card { padding: 20px; }
      form { grid-template-columns: 1fr; }
      .full { flex-direction: column-reverse; align-items: stretch; }
      .help-link { text-align: center; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <main class="card" role="main" aria-labelledby="search-heading">
      <header>
        <h1 id="search-heading">Search</h1>
        <p class="lead">Enter the field you want to search</p>
      </header>

      <form method="GET" action="/search/results">
        <div class="field">
          <label for="userId">User ID</label>
          <input id="userId" name="userId" type="text" placeholder="e.g. 12345">
        </div>

        <div class="field">
          <label for="name">Name</label>
          <input id="name" name="name" type="text" placeholder="Full or partial name">
        </div>

        <div class="field">
          <label for="age">Age</label>
          <input id="age" name="age" type="number" placeholder="e.g. 30" min="0">
        </div>

        <div class="field">
          <label for="gender">Gender</label>
          <input id="gender" name="gender" type="text" placeholder="Male, Female, etc.">
        </div>

        <div class="field">
          <label for="medicine">Medicine</label>
          <input id="medicine" name="medicine" type="text" placeholder="Medicine name">
        </div>

        <div class="full">
          <a class="help-link" href="/">Home</a>
          <button type="submit">Search</button>
        </div>
      </form>
    </main>
  </div>
</body>
</html>