<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Update</title>
  <style>
    /* Reset and base */
    *, *::before, *::after { box-sizing: border-box; }
    html, body { height: 100%; margin: 0; font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; background: linear-gradient(180deg,#f5f7fb 0%,#eef6ff 100%); color: #0b1220; }
    a { color: #2563eb; text-decoration: none; }
    a:hover { text-decoration: underline; }

    /* Layout */
    .wrap {
      min-height: 100vh;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 32px 20px;
    }

    .card {
      width: 100%;
      max-width: 840px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 12px 40px rgba(12,18,30,0.08);
      padding: 26px;
      transition: transform .16s ease, box-shadow .16s ease;
    }
    .card:focus-within,
    .card:hover { transform: translateY(-4px); box-shadow: 0 20px 56px rgba(12,18,30,0.10); }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      margin-bottom: 18px;
    }
    h1 {
      margin: 0;
      font-size: 1.4rem;
      color: #071126;
    }
    .subtitle {
      margin: 0;
      color: #475569;
      font-size: 0.95rem;
    }

    /* Form grid */
    form {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 14px;
      align-items: start;
    }

    .field {
      display: flex;
      flex-direction: column;
    }
    label {
      font-size: 0.88rem;
      color: #334155;
      margin-bottom: 6px;
      font-weight: 600;
    }

    input[type="text"],
    input[type="number"] {
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #e6eef9;
      background: linear-gradient(180deg,#ffffff 0%, #fbfdff 100%);
      font-size: 0.95rem;
      color: #0b1220;
      outline: none;
      transition: box-shadow .12s ease, border-color .12s ease, transform .12s ease;
    }
    input::placeholder { color: #94a3b8; }

    input:focus {
      border-color: #7aa2ff;
      box-shadow: 0 8px 22px rgba(122,162,255,0.12);
      transform: translateY(-1px);
    }

    /* Medicines col spans full width */
    #medicines {
      grid-column: 1 / -1;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    #medicines label { margin-bottom: 4px; }
    #medicines input[type="text"] {
      width: 100%;
    }

    /* Controls row */
    .controls {
      grid-column: 1 / -1;
      display: flex;
      gap: 12px;
      justify-content: flex-end;
      align-items: center;
      margin-top: 6px;
    }

    button, input[type="submit"] {
      appearance: none;
      -webkit-appearance: none;
      border: none;
      cursor: pointer;
      padding: 10px 14px;
      border-radius: 10px;
      font-size: 0.95rem;
      font-weight: 600;
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }

    /* Primary submit */
    input[type="submit"] {
      background: linear-gradient(90deg,#10b981 0%, #059669 100%);
      color: #ffffff;
      box-shadow: 0 10px 26px rgba(5,150,105,0.12);
    }
    input[type="submit"]:hover { transform: translateY(-2px); filter: brightness(1.03); }
    input[type="submit"]:active { transform: translateY(0); box-shadow: 0 6px 16px rgba(5,150,105,0.10); }

    /* Secondary add medicine */
    button#addMed {
      background: #ffffff;
      border: 1px solid #cbd5e1;
      color: #0b1220;
      box-shadow: none;
      padding: 9px 12px;
      display: inline-flex;
      gap: 8px;
      align-items: center;
    }
    button#addMed:hover { background: #f8fafc; transform: translateY(-2px); }

    /* Small note / link */
    .left-info {
      margin-right: auto;
      color: #64748b;
      font-size: 0.9rem;
    }

    /* Responsive: single column on narrow screens */
    @media (max-width: 820px) {
      form { grid-template-columns: 1fr; }
      .controls { justify-content: space-between; gap: 10px; }
    }

    @media (max-width: 420px) {
      .card { padding: 18px; border-radius: 10px; }
      h1 { font-size: 1.2rem; }
      button, input[type="submit"] { width: 100%; }
      .controls { flex-direction: column-reverse; align-items: stretch; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <main class="card" role="main" aria-labelledby="update-heading">
      <header>
        <h1 id="update-heading">Update</h1>
        <p class="subtitle">Edit user details and medicines</p>
      </header>

      <form action="/update" method="post">
        <div class="field">
          <label for="olduserId">Old UserId</label>
          <input id="olduserId" type="text" name="olduserId" placeholder="Existing user id">
        </div>

        <div class="field">
          <label for="userId">UserId</label>
          <input id="userId" type="text" name="userId" placeholder="New user id">
        </div>

        <div class="field">
          <label for="name">Name</label>
          <input id="name" type="text" name="name" placeholder="Full name">
        </div>

        <div class="field">
          <label for="age">Age</label>
          <input id="age" type="text" name="age" placeholder="e.g. 30">
        </div>

        <div class="field">
          <label for="gender">Gender</label>
          <input id="gender" type="text" name="gender" placeholder="Male / Female / Other">
        </div>

        <div class="field">
          <label for="weight">Weight (kg)</label>
          <input id="weight" type="text" name="weight" placeholder="e.g. 70">
        </div>

        <div class="field">
          <label for="height">Height (cm)</label>
          <input id="height" type="text" name="height" placeholder="e.g. 175">
        </div>

        <div id="medicines">
          <label>Medicine</label>
          <input type="text" name="medicine" placeholder="Medicine name">
        </div>

        <div class="controls">
          <span class="left-info">You can add multiple medicines</span>
          <button type="button" id="addMed">Add another medicine</button>
          <input type="submit" value="Submit">
        </div>
      </form>
    </main>
  </div>

  <script>
    document.getElementById('addMed').addEventListener('click', function () {
        const div = document.getElementById('medicines');
        const input = document.createElement('input');
        input.type = 'text';
        input.name = 'medicine';
        input.placeholder = 'Medicine name';
        input.style.marginTop = '6px';
        div.appendChild(input);
    });
  </script>
</body>
</html>