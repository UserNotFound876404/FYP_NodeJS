<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Signup page</title>
  <style>
    /* Reset / base */
    *, *::before, *::after { box-sizing: border-box; }
    html, body { height: 100%; margin: 0; font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; }
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(180deg, #f5f7fb 0%, #e8eef9 100%);
      padding: 32px;
      color: #0f1724;
    }

    /* Card */
    .card {
      width: 100%;
      max-width: 420px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 8px 30px rgba(17,24,39,0.08);
      padding: 28px;
      transition: transform .18s ease, box-shadow .18s ease;
    }
    .card:focus-within,
    .card:hover { transform: translateY(-4px); box-shadow: 0 18px 40px rgba(17,24,39,0.12); }

    /* Header */
    h1 {
      margin: 0 0 14px 0;
      font-size: 1.5rem;
      letter-spacing: -0.02em;
      color: #0b1220;
    }
    p.lead {
      margin: 0 0 20px 0;
      color: #475569;
      font-size: 0.95rem;
    }

    /* Form layout */
    form {
      display: grid;
      gap: 12px;
    }
    label {
      display: block;
      font-size: 0.85rem;
      color: #334155;
      margin-bottom: 6px;
    }

    .field {
      display: flex;
      flex-direction: column;
    }

    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 12px 14px;
      border-radius: 8px;
      border: 1px solid #e6eef9;
      background: linear-gradient(180deg, #ffffff 0%, #fbfdff 100%);
      font-size: 0.95rem;
      color: #0b1220;
      outline: none;
      transition: box-shadow .14s ease, border-color .14s ease, transform .12s ease;
    }
    input::placeholder { color: #9aa4b2; }

    input[type="text"]:focus,
    input[type="password"]:focus {
      border-color: #7aa2ff;
      box-shadow: 0 6px 18px rgba(122,162,255,0.12);
      transform: translateY(-1px);
    }

    /* Submit */
    .actions {
      margin-top: 6px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
    }
    input[type="submit"] {
      appearance: none;
      -webkit-appearance: none;
      border: none;
      cursor: pointer;
      background: linear-gradient(90deg,#3b82f6 0%, #2563eb 100%);
      color: #ffffff;
      padding: 11px 16px;
      border-radius: 10px;
      font-size: 0.98rem;
      font-weight: 600;
      box-shadow: 0 8px 20px rgba(37,99,235,0.18);
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }
    input[type="submit"]:hover { transform: translateY(-2px); filter: brightness(1.03); }
    input[type="submit"]:active { transform: translateY(0); box-shadow: 0 6px 14px rgba(37,99,235,0.14); }

    /* Small helper text and link */
    .muted {
      font-size: 0.85rem;
      color: #64748b;
    }
    .link {
      color: #2563eb;
      text-decoration: none;
      font-weight: 600;
    }

    /* Responsive adjustments */
    @media (max-width: 480px) {
      body { padding: 20px; }
      .card { padding: 20px; border-radius: 10px; }
      h1 { font-size: 1.25rem; }
    }
  </style>
</head>
<body>
  <main class="card" role="main" aria-labelledby="signup-heading">
    <h1 id="signup-heading">Create an account</h1>
    <p class="lead">Sign up to access your dashboard and manage your settings.</p>

    <form action="/signup" method="post" novalidate>
      <div class="field">
        <label for="name">Username</label>
        <input id="name" name="name" type="text" placeholder="Choose a username" required aria-required="true">
      </div>

      <div class="field">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" placeholder="Create a secure password" required aria-required="true" autocomplete="new-password">
      </div>

      <div class="actions">
        <span class="muted">Already have an account? <a class="link" href="/login">Log in</a></span>
        <input type="submit" value="Signup">
      </div>
    </form>
  </main>
</body>
</html>