<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Delete</title>
  <style>
    /* Reset & base */
    *, *::before, *::after { box-sizing: border-box; }
    html, body { height: 100%; margin: 0; font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale; background: linear-gradient(180deg,#f6f8fb 0%,#eef5ff 100%); color: #0b1220; }
    a { color: #2563eb; text-decoration: none; }
    a:hover { text-decoration: underline; }

    /* Layout */
    .wrap {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 28px;
    }

    .card {
      width: 100%;
      max-width: 520px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 12px 40px rgba(12,18,30,0.08);
      padding: 28px;
      transition: transform .16s ease, box-shadow .16s ease;
    }
    .card:focus-within,
    .card:hover { transform: translateY(-4px); box-shadow: 0 20px 46px rgba(12,18,30,0.10); }

    header {
      margin-bottom: 14px;
    }
    h1 {
      margin: 0 0 6px 0;
      font-size: 1.4rem;
      color: #071126;
    }
    p.lead {
      margin: 0;
      color: #475569;
      font-size: 0.95rem;
    }

    /* Form */
    form {
      margin-top: 18px;
      display: grid;
      gap: 12px;
    }

    label {
      display: block;
      font-size: 0.92rem;
      color: #334155;
      margin-bottom: 6px;
      font-weight: 600;
    }

    input[type="text"] {
      width: 100%;
      padding: 10px 12px;
      border-radius: 8px;
      border: 1px solid #e6eef9;
      background: linear-gradient(180deg,#ffffff 0%, #fbfdff 100%);
      font-size: 0.95rem;
      color: #0b1220;
      outline: none;
      transition: box-shadow .14s ease, border-color .14s ease, transform .12s ease;
    }
    input::placeholder { color: #9aa4b2; }

    input[type="text"]:focus {
      border-color: #7aa2ff;
      box-shadow: 0 8px 20px rgba(122,162,255,0.12);
      transform: translateY(-1px);
    }

    /* Submit */
    .actions {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      margin-top: 6px;
    }
    input[type="submit"] {
      appearance: none;
      -webkit-appearance: none;
      border: none;
      cursor: pointer;
      background: linear-gradient(90deg,#ef4444 0%, #dc2626 100%);
      color: #ffffff;
      padding: 10px 16px;
      border-radius: 10px;
      font-size: 0.98rem;
      font-weight: 600;
      box-shadow: 0 10px 26px rgba(220,38,38,0.12);
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }
    input[type="submit"]:hover { transform: translateY(-2px); filter: brightness(1.03); }
    input[type="submit"]:active { transform: translateY(0); box-shadow: 0 6px 14px rgba(220,38,38,0.10); }

    .hint {
      color: #64748b;
      font-size: 0.9rem;
    }

    /* Responsive */
    @media (max-width: 420px) {
      .card { padding: 20px; border-radius: 10px; }
      h1 { font-size: 1.2rem; }
      .actions { flex-direction: column-reverse; align-items: stretch; gap: 8px; }
      input[type="submit"] { width: 100%; }
    }
  </style>
</head>
<body>
  <div class="wrap">
    <main class="card" role="main" aria-labelledby="delete-heading">
      <header>
        <h1 id="delete-heading">Delete</h1>
        <p class="lead">Enter the user you want to delete by userID</p>
      </header>

      <form action="/delete" method="post">
        <div>
          <label for="userId">UserId</label>
          <input id="userId" type="text" name="userId" placeholder="Enter user ID to delete" required>
        </div>

        <div class="actions">
          <span class="hint">This will permanently remove the user.</span>
          <input type="submit" value="Submit">
        </div>
      </form>
    </main>
  </div>
</body>
</html>